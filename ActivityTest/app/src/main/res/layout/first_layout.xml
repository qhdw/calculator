<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">
    <!--输入的文本框-->
    <EditText
        android:id="@+id/et_result"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:textSize="26sp" />
    <!--网格布局-->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/btn_clear"
            android:text="AC"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_fh"
            android:text="+/-"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_percent"
            android:text="%"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_div"
            android:text="÷"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_7"
            android:text="7"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_8"
            android:text="8"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_9"
            android:text="9"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_mul"
            android:text="×"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_4"
            android:text="4"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_5"
            android:text="5"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_6"
            android:text="6"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_sub"
            android:text="-"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_1"
            android:text="1"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_2"
            android:text="2"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_3"
            android:text="3"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_add"
            android:text="+"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_sq"
            android:text="√"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_0"
            android:text="0"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_dot"
            android:text="."
            android:textSize="26sp" />

        <Button
            android:id="@+id/btn_equ"
            android:text="="
            android:textSize="26sp" />

    </GridLayout>


</LinearLayout>
